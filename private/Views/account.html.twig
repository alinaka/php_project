{% extends "account_base.html.twig" %}

{% block view %}
    <div class="row">
        <div class="col-4">
            {% if user.avatar %}
               <img class="avatar" src="uploads/{{ user.avatar }}">
            {% else %}
               <img src="uploads/no_avatar.gif">
            {% endif %}
            <form method="post" action="profile/downloadAvatar" id="avatar_form">   
                <input class="form-control" type="file" name="avatar" id="avatar" 
                       data-validation-allowing="jpg, png, gif" 
                       data-validation="mime size" 
                       data-validation-max-size="2M">       
                <input type="submit">
            </form>
        </div>
        <div class="col-6">
            <h3>{{user.name }} {{ user.surname }}</h3>
            <p>Ваш логин: {{ login }} </p>
            <p>Пол:  </p>
            <p>Дата рождения: {{ user.birthday|date("d.m.Y") }}</p>
            <p>Электронная почта: {{ user.email }}</p>  
        </div>
    </div>
{% endblock %}

