<form method="post" id="reg_form" action="/account/registration">
    <span id="result"></span>
    <div class="form-group" id="login_input">
        <label for="login" class="control-label">Логин</label><i></i>
        <input class="form-control" type="text" name="login" id="login" 
               data-validation-allowing="-_"
               data-validation-length="min5"
               data-validation-length="max20"
               data-validation-error-msg="Логин должен состоять из латинских букв и цифр, длиной от 5 до 20 знаков."
               data-validation="server" 
               data-validation-url="/account/check_login">
    </div>
    <div class="form-group">
        <label for="email" class="control-label">E-mail</label><i></i>
        <input class="form-control" type="text" name="email" id="email" data-validation="email"
               data-validation-error-msg="Введите корректный e-mail">
    </div>
    <div class="form-group">
        <label for="password" class="control-label">Пароль</label><i></i>
        <input class="form-control" type="password" name="password" id="password" 
               data-validation="strength" 
               data-validation-strength="2"
               data-validation-error-msg="Пароль недостаточно надежен">
    </div>
    <div class="form-group">
        <label for="password_check" class="control-label">Повторите пароль</label><i></i>
        <input class="form-control" type="password" name="password_check" id="password_check" 
               data-validation="confirmation required" 
               data-validation-confirm="password"
               data-validation-error-msg="Введенные пароли не соответствуют друг другу">
    </div>
</form>