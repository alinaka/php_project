{% extends "account_base.html.twig" %}

{% block view %}
    <form action="report/getData" method="post" id="report_form">
        <p>
            <select name="report_on">
                <option selected value="general">Общий</option>
                {% for task in tasks %}
                    <option value="{{ task.task_id }}">{{ task.title }}</option>
                {% endfor %}
            </select>
        </p>
        <label for="from">From</label>
        <input type="text" data-validation="date" id="from" name="from">
        <label for="to">to</label>
        <input type="text" data-validation="date" id="to" name="to">
        <p><input type="submit" value="Получить отчет"></p>
    </form>
    <div class="chart-container" style="position: relative; height:50vh; width:50vw">
        <canvas id="myChart"></canvas>
    </div>
{% endblock %}